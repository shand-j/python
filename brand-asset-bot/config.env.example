# Brand Asset Bot Configuration
# Copy this file to config.env and fill in your values

# OpenAI API Configuration (for future AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Image Processing Configuration
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=90

# Brand Asset Discovery Configuration
BRAND_REGISTRY_FILE=./data/brands.json
COMPETITOR_SITES_FILE=./data/competitor_sites.json
DOWNLOAD_DIR=./downloads
EXTRACTED_DIR=./extracted
CATALOG_DIR=./catalog

# Scraping Configuration
REQUEST_TIMEOUT=30
REQUEST_DELAY=2
MAX_RETRIES=3
USER_AGENT_ROTATION=true

# Proxy Configuration (optional)
USE_PROXY=false
PROXY_URL=

# Output Configuration
OUTPUT_DIR=./output
IMAGES_DIR=./images
LOGS_DIR=./logs
DATA_DIR=./data

# Logging Configuration
LOG_LEVEL=INFO
